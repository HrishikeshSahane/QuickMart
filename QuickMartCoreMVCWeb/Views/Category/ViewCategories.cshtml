@model IEnumerable<QuickMartCoreMVCWeb.Models.Categories>

@{
    ViewData["Title"] = "ViewCategories";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>ViewCategories</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditCategory", item) |
                @Html.ActionLink("Delete", "DeleteCategory", new { CategoryId = item.CategoryId ,CategoryName=item.CategoryName})
            </td>
        </tr>
}
    </tbody>
</table>
