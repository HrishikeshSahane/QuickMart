@model QuickMartDataAccessLayer.Models.Users

@{
    ViewData["Title"] = "UserRegistration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UserRegistration">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmailId" class="control-label"></label>
                <input type="email" asp-for="EmailId" pattern="^[^<>;]+$" class="form-control" required />
                <span asp-validation-for="EmailId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserPassword" type="password" class="control-label"></label>
                <input asp-for="UserPassword" type="password" class="form-control" required/>
                <span asp-validation-for="UserPassword" type="password" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender">
                    <option selected disabled>-- Select Gender --</option>
                    <option>M</option>
                    <option>F</option>
                    <option>O</option>

                </select>
               
                <span asp-validation-for="Gender" class="text-danger"> </span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth" type="date" class="control-label"></label>
                <br/>
                <input asp-for="DateOfBirth" type="date" class="form-control" required/>
                <span asp-validation-for="DateOfBirth" placeholder="yyyy-mm-dd" type="datetime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" pattern="^[^<>;]+$" class="form-control" required />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" style="background-color:#0071dc;color:gold;text-align:center" class="btn texthovereffect" value="Submit" class="btn btn-default">
            </div>
            <b style="text-align:center;color:lawngreen">@ViewData["Message"]</b>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
